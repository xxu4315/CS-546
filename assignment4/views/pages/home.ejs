<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
</head>

<body>
    <div class="container">
        <div class="page-header">
            <h1>My Movies</h1>
        </div>
        <div id="movies" class="row">
            <% for(var i = 0 ; i < movieEntries.length ; i++) { %>
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="movie-entry text-center" id="<%= movieEntries[i]._id %>">
                        <p><b><%= movieEntries[i].title %></b>: <%= movieEntries[i].rating %></p>
                        <button type="button" class="btn btn-success increment-rating" data-movie="<%= movieEntries[i]._id %>"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></button>
                        <button type="button" class="btn btn-warning decrement-rating" data-movie="<%= movieEntries[i]._id %>"><span class="glyphicon glyphicon-minus" aria-hidden="true"></span></button>
                        <button type="button" class="btn btn-danger remove" data-movie="<%= movieEntries[i]._id %>">Remove</button>
                    </div>
                </div>
            <% } %>
        </div>
        <br />
        <a href='#' class="btn btn-primary" id="load-all-movies">All Movies</a>
        <a href='#' class="btn" id="load-best-movies">Best Movies</a>

        <div class="page-header">
            <h1>Add a New Movie</h1>
        </div>
        <form id="add-movie-form" class="form-horizontal">
            <div class="form-group">
                <label for="movie-title" class="col-sm-1 control-label">Movie</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="movie-title" placeholder="Movie" required>
                </div>
            </div>
            <div class="form-group">
                <label for="movie-rating" class="col-sm-1 control-label">Rating</label>
                <div class="col-sm-4">
                    <input type="number" step="0.1" class="form-control" id="movie-rating" placeholder="Rating" required>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-1 col-sm-10">
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </div>
        </form>
    </div>

    <% include ../partials/scripts %>
</body>

</html>
